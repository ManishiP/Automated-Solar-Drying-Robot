//Controls the movement of the shield when sudden rains occur
void shieldAct(){
  for (int i=0; i<180; i++){
    servomotor1.write(i);
    servomotor2.write(180-i);
    delay(5);
  }

  shieldOk = true;
}

void shieldDct(){
  for (int i=180; i>=0; i--){
    servomotor1.write(i);
    servomotor2.write(180-i);
    delay(20);
  }
}
